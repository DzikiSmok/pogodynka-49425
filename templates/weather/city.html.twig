{% extends 'base.html.twig' %}

{# @var city \App\Entity\City #}
{# @var weather \App\Entity\Forecast #}

{% block title %}Weather in {{ city.name }}, {{ city.country }}{% endblock %}

{% block body %}
    <main>
        <h1>Weather in {{ city.name }}, {{ city.country }}</h1>

        <ul>
            {% for measurement in measurements %}
                <li>{{ measurement.date|date('d.m.Y') }}: {{ measurement.temperature }}&deg;C</li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}
